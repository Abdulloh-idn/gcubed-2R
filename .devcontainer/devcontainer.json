{
	"name": "G-Cubed 2R"
	, "build": {
		"context": "..",
		"dockerfile": "./Dockerfile"
	}
	, "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind"
	, "workspaceFolder": "/workspace/user_data"
	, "customizations": {
		"vscode": {
			"settings": {
				"python.analysis.diagnosticSeverityOverrides": {
					"reportMissingImports": "none"
				},
				"git.openRepositoryInParentFolders": "always",
				"terminal.integrated.inheritEnv": true,
				"terminal.integrated.cwd": "/workspace/user_data",
				"python.terminal.executeInFileDir": false,
				"telemetry.telemetryLevel": "off",
				"workbench.startupEditor": "none",
				"workbench.colorTheme": "Default Dark Modern",
				"workbench.editorAssociations": { 
					"*.md": "vscode.markdown.preview.editor" 
				}
			},
			"extensions": [
				"mechatroner.rainbow-csv"
			]
		}
	} 
	, "onCreateCommand": "/gcubed-setup/gcubed-setup.sh -u \"/gcubed-setup/user_data_defaults\" -v \"/workspace/user_data\" -t \"/gcubed-setup/temp\" -p \"https://github.com/McKibbin-Software-Group/gcubed-2R-prerequisites.git\" -s \"https://github.com/McKibbin-Software-Group/gcubed-sym-source.git\""
}
