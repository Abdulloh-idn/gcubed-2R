{
	"name": "G-Cubed 2R",
	"build": {
		"context": "..",
		"dockerfile": "./Dockerfile"
	},
	"workspaceMount": "source=${localWorkspaceFolder}/workspace/user_data,target=/user_data,type=bind",
	"workspaceFolder":"/user_data",
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.cwd": "/user_data",
				"python.terminal.executeInFileDir": false,
				"telemetry.telemetryLevel": "off",
				"workbench.startupEditor": "none",
				"workbench.colorTheme": "Default Dark Modern",
				"workbench.editorAssociations": { 
					"*.md": "vscode.markdown.preview.editor" 
				}
			},
			"extensions": [
				"mechatroner.rainbow-csv"
			]
		}
	} 
	,
	"onCreateCommand": "sudo chown -R vscode:root /user_data && /gcubed-setup/gcubed-setup.sh -a \"McKibbin-Software-Group\" -u \"/gcubed-setup/user_data_defaults\" -v \"/user_data\" -t \"/gcubed-setup/temp\" -d \"gcubed-2R-user-data\"-p \"https://github.com/McKibbin-Software-Group/gcubed-2R-prerequisites.git\" -s \"https://github.com/McKibbin-Software-Group/gcubed-sym-source.git\""
}
